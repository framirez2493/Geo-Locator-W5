{
  "name": "geolocator-w5",
  "version": "1.0.0",
  "description": "React app to quickly grab user location for different applications and uses",
  "main": "server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "node server.js",
    "start:dev": "concurrently \"nodemon --ignore 'client/*' --ignore 'app/*'\" \"npm run client\"",
    "client": "cd client && npm run start",
    "app": "cd app && npm run start",
    "install": "cd client && yarn install && cd ../app && yarn install",
    "build": "cd client && npm run build",
    "heroku-postbuild": "npm run build"
  },
  "repository": {
    "type": "",
    "url": "https://github.com/framirez2493/Geo-Locator-W5"
  },
  "author": "Fernando R",
  "license": "ISC",
  "bugs": {
  
  },
  "homepage": "https://shrouded-dusk-83098.herokuapp.com",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "if-env": "^1.0.4",
    "mongodb": "^3.1.10",
    "mongoose": "^5.3.12",
    "multer": "^1.4.1",
    "react-native-submit-button": "^1.0.5",
    "react-navigation": "^3.0.4"
  },
  "devDependencies": {
    "concurrently": "^4.0.1",
    "nodemon": "^1.18.6"
  }
}
